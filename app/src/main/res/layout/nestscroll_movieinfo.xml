<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_linear"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/detail_text_linear"
        android:layout_weight="0.6"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:orientation="vertical"
      >
        <TextView
            android:id="@+id/detail_name"
            android:textSize="25sp"
            android:textStyle="bold"
            style="@style/detailtextbase"
            android:layout_marginBottom="10dp"
            />

        <TextView

            android:id="@+id/detail_year_style_text"
            style="@style/detailtextbase"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/detail_name_en"
            android:textSize="12sp"
            style="@style/detailtextbase"
            />

        <TextView

            android:id="@+id/detail_show_day"
            style="@style/detailtextbase"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/detail_min"
            android:textSize="12sp"
            style="@style/detailtextbase"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:background="#fff"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/detail_score_text"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <example.wanghan.com.realtimemovie.widget.RatingBar
                    
                    android:id="@+id/detail_score_star"
                    app:starEmpty="@drawable/emptystar"
                    app:starFill="@drawable/fillstar"
                    app:starSize="9sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>


</LinearLayout>
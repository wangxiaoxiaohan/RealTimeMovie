<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <example.wanghan.com.realtimemovie.widget.CircleImageView

        android:id="@+id/commit_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:Width="35dp" />

    <LinearLayout
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_gravity="center_vertical"
                    android:id="@+id/consumer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <example.wanghan.com.realtimemovie.widget.RatingBar
                    android:layout_gravity="center_vertical"
                    android:id="@+id/consumer_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:starEmpty="@drawable/emptystar"
                    app:starFill="@drawable/fillstar"
                    app:starSize="9sp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <example.wanghan.com.realtimemovie.widget.LikeView
                    android:layout_gravity="right"
                    android:id="@+id/consumer_commit_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon_size="32dp"
                    />



            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/commit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>